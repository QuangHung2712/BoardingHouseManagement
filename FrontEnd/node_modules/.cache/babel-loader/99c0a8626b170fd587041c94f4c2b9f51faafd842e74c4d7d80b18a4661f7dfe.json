{"ast":null,"code":"import Rightbar from \"@/components/right-bar.vue\";\nimport apiClient from \"@/plugins/axios\";\nexport default {\n  name: \"FORGOT-PASSWORD\",\n  components: {\n    Rightbar\n  },\n  data() {\n    return {\n      email: '',\n      IsEmail: false,\n      IsCode: false,\n      inputs: Array(6).fill(''),\n      data: {\n        password: '',\n        passwordConfirm: '',\n        landlordId: 0\n      },\n      message: '',\n      snackbar: false,\n      snackbarColor: '',\n      rules: {\n        validEmail: v => /^[a-zA-Z0-9._%+-]+@gmail\\.com$/.test(v) || 'Email phải hợp lệ và kết thúc bằng @gmail.com',\n        validPassword: v => /^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$/.test(v) || 'Mật khẩu phải có ít nhất 8 ký tự, bao gồm ít nhất 1 chữ cái và 1 chữ số',\n        matchPassword: v => v === this.password || 'Mật khẩu xác nhận không khớp'\n      },\n      showpassword: false\n    };\n  },\n  methods: {\n    btnSendEmail() {\n      apiClient.post(`/Landlord/ForGotPassword/${this.email}`).then(response => {\n        this.data.landlordId = response.data;\n        this.IsEmail = true;\n      }).catch(error => {\n        this.message = 'Đã xảy ra lỗi: ' + error.response.data.message;\n        this.snackbarColor = 'red';\n        this.snackbar = true;\n      });\n    }\n  }\n};","map":{"version":3,"names":["Rightbar","apiClient","name","components","data","email","IsEmail","IsCode","inputs","Array","fill","password","passwordConfirm","landlordId","message","snackbar","snackbarColor","rules","validEmail","v","test","validPassword","matchPassword","showpassword","methods","btnSendEmail","post","then","response","catch","error"],"sources":["D:\\Code\\BoardingHouseManagement\\BoardingHouseManagement\\FrontEnd\\src\\views\\Manage\\Auth\\forgot-password.vue"],"sourcesContent":["<style scoped>\r\n    .auth-wrapper{\r\n        background-image: url('../../../../public/images/background.jpg');\r\n        background-size: cover;\r\n        background-position: center;\r\n        background-repeat: no-repeat;\r\n    }\r\n</style>\r\n<script>\r\nimport Rightbar from \"@/components/right-bar.vue\"\r\nimport apiClient from \"@/plugins/axios\";\r\n\r\nexport default {\r\n    name: \"FORGOT-PASSWORD\",\r\n    components: {\r\n        Rightbar\r\n    },\r\n    data(){\r\n        return{\r\n            email:'',\r\n            IsEmail: false,\r\n            IsCode: false,\r\n            inputs: Array(6).fill(''),\r\n            data: {\r\n                password: '',\r\n                passwordConfirm: '',\r\n                landlordId: 0,\r\n            },\r\n            message: '',\r\n            snackbar: false,\r\n            snackbarColor: '',\r\n            rules: {\r\n                validEmail: v => /^[a-zA-Z0-9._%+-]+@gmail\\.com$/.test(v) || 'Email phải hợp lệ và kết thúc bằng @gmail.com',\r\n                validPassword: v=> /^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$/.test(v) || 'Mật khẩu phải có ít nhất 8 ký tự, bao gồm ít nhất 1 chữ cái và 1 chữ số',\r\n                matchPassword: (v) =>v === this.password || 'Mật khẩu xác nhận không khớp',\r\n            },\r\n            showpassword: false,\r\n        }\r\n    },\r\n    methods:{\r\n        btnSendEmail(){\r\n            apiClient.post(`/Landlord/ForGotPassword/${this.email}`)\r\n                    .then(response=> {\r\n                        this.data.landlordId = response.data;\r\n                        this.IsEmail = true;\r\n                    })\r\n                    .catch(error=>{\r\n                        this.message = 'Đã xảy ra lỗi: ' + error.response.data.message;\r\n                        this.snackbarColor = 'red'\r\n                        this.snackbar = true\r\n                    })\r\n        },\r\n    }\r\n}\r\n</script>\r\n\r\n<template>\r\n    <div class=\"auth-main v2\">\r\n        <v-snackbar\r\n            v-model=\"snackbar\"\r\n            :timeout=\"10000\"\r\n            class=\"custom-snackbar\"\r\n            :color=\"snackbarColor\"\r\n        >\r\n            <h5 class=\"text-center\">{{ message }}</h5>\r\n        </v-snackbar>\r\n        <div class=\"bg-overlay bg-dark\"></div>\r\n        <div class=\"auth-wrapper\">\r\n            <div class=\"auth-sidecontent\">\r\n                <div class=\"auth-sidefooter\">\r\n                    <h4 class=\"text-white\">QUẢN LÝ NHÀ TRỌ</h4>\r\n                    <!-- <img src=\"\" class=\"img-brand img-fluid\" alt=\"images\"> -->\r\n                    <hr class=\"mb-3 mt-4\">\r\n                    <!-- <BRow class=\"row\">\r\n                        <BCol class=\"col-auto my-1\">\r\n                            <ul class=\"list-inline footer-link mb-0\">\r\n                                <li class=\"list-inline-item\"><router-link to=\"/dashboard\">Home</router-link></li>\r\n                                <li class=\"list-inline-item\"><a href=\"#\"\r\n                                        target=\"_blank\">Documentation</a></li>\r\n                                <li class=\"list-inline-item\"><a href=\"#\"\r\n                                        target=\"_blank\">Support</a></li>\r\n                            </ul>\r\n                        </BCol>\r\n                    </BRow> -->\r\n                </div>\r\n            </div>\r\n            <div class=\"auth-form\">\r\n                <div class=\"card my-5 mx-3\">\r\n                    <div class=\"card-body\">\r\n                        <h4 class=\"f-w-500 mb-1\">Quên mật khẩu</h4>\r\n                        <p class=\"mb-3\">Quay lại <router-link to=\"/login\" class=\"link-primary\">Đăng nhập</router-link></p>\r\n                        <div class=\"form-group\">\r\n                            <label class=\"form-label\">Email</label>\r\n                            <v-text-field \r\n                                type=\"text\"  \r\n                                variant=\"outlined\" \r\n                                placeholder=\"Nhập vào Email\" \r\n                                v-model=\"email\"\r\n                                :readonly=\"IsCode\"\r\n                            ></v-text-field>\r\n                        </div>\r\n                        <div   class=\"d-grid\">\r\n                            <button type=\"button\" v-show=\"!IsEmail && !IsCode\" class=\"btn btn-primary\" @click=\"btnSendEmail\">Gửi Email</button>\r\n                        </div>\r\n                        <div v-show=\"IsEmail\">\r\n                            <p class=\"mb-0\">Chúng tôi đã gửi mã đến email của bạn. Vui lòng vào email để lấy mã</p>\r\n                            <p class=\"mb-3\">Không nhận được Email?<a href=\"#\" class=\"link-primary ms-1\">Gửi lại mã</a></p>\r\n                            <BRow class=\"row my-4 text-center\">\r\n                                <BCol class=\"col\" v-for=\"(input, index) in inputs\" :key=\"index\">\r\n                                    <input type=\"text\" class=\"form-control text-center\" placeholder=\"0\" maxlength=\"1\">\r\n                                </BCol>\r\n                            </BRow>\r\n                            <div  class=\"d-grid\">\r\n                                <button type=\"button\" @click=\"btnContinue\" class=\"btn btn-primary\">Tiếp tục</button>\r\n                            </div>\r\n                        </div>\r\n                        <div v-show=\"IsCode\">\r\n                            <div class=\"form-group m-0\">\r\n                                <label class=\"form-label\">Mật khẩu</label>\r\n                                <v-text-field \r\n                                    type=\"text\"  \r\n                                    variant=\"outlined\" \r\n                                    placeholder=\"Nhập vào mật khẩu\"\r\n                                    :rules=\"[rules.validPassword]\" \r\n                                    v-model=\"password\"\r\n                                ></v-text-field>\r\n                            </div>\r\n                            <div class=\"form-group \">\r\n                                <label class=\"form-label\">Nhập lại mật khẩu</label>\r\n                                <v-text-field \r\n                                    type=\"text\"  \r\n                                    variant=\"outlined\" \r\n                                    placeholder=\"Nhập lại mật khẩu\" \r\n                                    v-model=\"passwordConfirm\"\r\n                                    :rules=\"[rules.matchPassword]\" \r\n                                ></v-text-field>\r\n                            </div>\r\n                            <div  class=\"d-grid\">\r\n                                <button type=\"button\" @click=\"btnSave\" class=\"btn btn-primary\">Đổi mật khẩu</button>\r\n                            </div>\r\n                        </div>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n    <Rightbar />\r\n</template>"],"mappings":"AASA,OAAOA,QAAO,MAAO,4BAA2B;AAChD,OAAOC,SAAQ,MAAO,iBAAiB;AAEvC,eAAe;EACXC,IAAI,EAAE,iBAAiB;EACvBC,UAAU,EAAE;IACRH;EACJ,CAAC;EACDI,IAAIA,CAAA,EAAE;IACF,OAAM;MACFC,KAAK,EAAC,EAAE;MACRC,OAAO,EAAE,KAAK;MACdC,MAAM,EAAE,KAAK;MACbC,MAAM,EAAEC,KAAK,CAAC,CAAC,CAAC,CAACC,IAAI,CAAC,EAAE,CAAC;MACzBN,IAAI,EAAE;QACFO,QAAQ,EAAE,EAAE;QACZC,eAAe,EAAE,EAAE;QACnBC,UAAU,EAAE;MAChB,CAAC;MACDC,OAAO,EAAE,EAAE;MACXC,QAAQ,EAAE,KAAK;MACfC,aAAa,EAAE,EAAE;MACjBC,KAAK,EAAE;QACHC,UAAU,EAAEC,CAAA,IAAK,gCAAgC,CAACC,IAAI,CAACD,CAAC,KAAK,+CAA+C;QAC5GE,aAAa,EAAEF,CAAC,IAAG,wCAAwC,CAACC,IAAI,CAACD,CAAC,KAAK,yEAAyE;QAChJG,aAAa,EAAGH,CAAC,IAAIA,CAAA,KAAM,IAAI,CAACR,QAAO,IAAK;MAChD,CAAC;MACDY,YAAY,EAAE;IAClB;EACJ,CAAC;EACDC,OAAO,EAAC;IACJC,YAAYA,CAAA,EAAE;MACVxB,SAAS,CAACyB,IAAI,CAAC,4BAA4B,IAAI,CAACrB,KAAK,EAAE,EAC9CsB,IAAI,CAACC,QAAQ,IAAG;QACb,IAAI,CAACxB,IAAI,CAACS,UAAS,GAAIe,QAAQ,CAACxB,IAAI;QACpC,IAAI,CAACE,OAAM,GAAI,IAAI;MACvB,CAAC,EACAuB,KAAK,CAACC,KAAK,IAAE;QACV,IAAI,CA